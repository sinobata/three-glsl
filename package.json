{
  "name": "three-glsl",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\" && npm run format:glsl",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "format:glsl": "find src/shaders -name '*.glsl' -o -name '*.frag' -o -name '*.vert' | xargs clang-format -i",
    "format:prettier": "prettier --write \"**/*.{js,ts,tsx,json,md}\""
  },
  "dependencies": {
    "@react-three/drei": "^10.1.2",
    "@react-three/fiber": "^9.1.2",
    "@react-three/postprocessing": "^3.0.4",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.177.0",
    "three-stdlib": "^2.36.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.177.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "glsl-shader-loader": "^0.1.6",
    "prettier": "^3.5.3",
    "prettier-plugin-glsl": "^0.2.1",
    "raw-loader": "^4.0.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
